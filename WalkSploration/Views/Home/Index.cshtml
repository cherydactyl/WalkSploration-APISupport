

@{
    ViewBag.Title = "Walksploration";
} 

<body onload="geoFindMe()">
<div class=" jumbotron">
    <img src="~/Images/walksplorationBanner.png" style="width : 100% " />
    </div>
    <div class="container">
        <div class="col-md-12">
            <h2>Have some time for a break?</h2>
            <h4 style="padding-left: 20px;">Explore your world! Enter your available time, and we will send you to a new, exciting point of interest for you to explore.</h4>
        </div>
    </div>

    <div id="timeSlider" style="background:#ffffff; border: 1px solid #000000; width: 40%; margin:0 auto;">
        <div style="padding: 0px 12px;">
            <h3>How long do you have?     <span><span class="glyphicon glyphicon-time"></span>
                <span id="time-display">15</span> mins</span></h3>
            <form name="ourform" action="/Home/Walk" method="POST">
                <fieldset>
                    <ul style="list-style-type:none">

                        <li>
                            <input type="hidden" name="startLatitude" id="startLatitude" value=loc.lattitude />
                            <input type="hidden" name="startLongitude" id="startLongitude" />
                            10
                            <input type="range" name="timeInput" id="timeInput" min="10" max="60" value="15" step="1" onchange="showValue(this.value)" />
                            60
                        </li>
                        <li><br /><li>
                            <input type="submit" name="button" value="Let's Go!" onClick="submit" />
                        </li>
                    </ul>
                </fieldset>
            </form>
            <br />
                      
        </div>
    </div>

    <h3 id="map_canvas" style="max-width: 1140px; height: 350px; border: 4px solid #5E5454" ;></h3>
    <div id="outLat"></div><div id="outLon"></div>  

</body>
<script type="text/javascript">

    //$ signifies that it's JQuery
    // So when the document is ready, call the functions listed in the {Curly Braces}
    $(document).ready(function () {
        initializeMap();
    });
</script>
